<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="db_task">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.example.db_task.TableClasses.Cars</class>
        <class>com.example.db_task.TableClasses.CarsOfPeople</class>
        <class>com.example.db_task.TableClasses.CarsOfPeople</class>
        <class>com.example.db_task.TableClasses.EmailTemplates</class>
        <class>com.example.db_task.TableClasses.PersonData</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/Cars?useSSL=false&amp;serverTimezone=UTC"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="Rootpass11"/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
            <property name="hbm2ddl.auto" value="update"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
        </properties>
    </persistence-unit>

</persistence>